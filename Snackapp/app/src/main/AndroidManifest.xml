<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gebruiker.snackapp" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="21" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.LOCATION_HARDWARE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="SnackApp"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".snackbar_layout"
            android:label="Snackbar" >
            <intent-filter>
                <action android:name="com.example.snackbar_layout" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".turks_layout"
            android:label="Turk" >
            <intent-filter>
                <action android:name="com.example.turks_layout" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".italiaans_layout"
            android:label="Italiaans" >
            <intent-filter>
                <action android:name="com.example.italiaans_layout" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    <activity
        android:name=".MapPane"
        android:label="Map">
        <intent-filter>
            <action android:name="com.example.map_activity" />

            <category android:name="android.intent.category.app_maps" />
        </intent-filter>
    </activity>


    </application>

</manifest>
