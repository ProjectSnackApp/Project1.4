<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#7c938f89"
    android:id="@+id/AchterSnack">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img1"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/title1"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Route"
        android:id="@+id/route1"
        android:layout_below="@+id/img1"
        android:layout_toStartOf="@+id/favoriet1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favoriet"
        android:id="@+id/favoriet1"
        android:layout_alignTop="@+id/route1"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title Snackbar"
        android:id="@+id/title1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favoriet"
        android:id="@+id/favoriet2"
        android:layout_alignTop="@+id/route2"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Route"
        android:id="@+id/route2"
        android:layout_below="@+id/img2"
        android:layout_toStartOf="@+id/favoriet2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img2"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/title2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title Snackbar2"
        android:id="@+id/title2"
        android:layout_below="@+id/route1"
        android:layout_alignStart="@+id/title1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title Snackbar3"
        android:id="@+id/title3"
        android:layout_below="@+id/route2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img3"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/title3"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favoriet"
        android:id="@+id/favoriet3"
        android:layout_below="@+id/img3"
        android:layout_alignEnd="@+id/favoriet2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Route"
        android:id="@+id/route3"
        android:layout_alignTop="@+id/favoriet3"
        android:layout_alignStart="@+id/route2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title Snackbar4"
        android:id="@+id/title4"
        android:layout_below="@+id/favoriet3"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img4"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/title4"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Route"
        android:id="@+id/route4"
        android:layout_alignTop="@+id/favoriet4"
        android:layout_alignStart="@+id/route3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favoriet"
        android:id="@+id/favoriet4"
        android:layout_below="@+id/img4"
        android:layout_toEndOf="@+id/route4" />


</RelativeLayout>