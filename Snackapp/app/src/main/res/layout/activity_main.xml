<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#7c938f89"
    android:id="@+id/AchterHoofd">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_launcher"
        android:layout_alignRight="@+id/ButtonSnack"
        android:layout_alignEnd="@+id/ButtonSnack"
        android:layout_above="@+id/ButtonSnack" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snackbar"
        android:id="@+id/ButtonSnack"
        android:layout_above="@+id/ButtonTurks"
        android:layout_alignLeft="@+id/ButtonTurks"
        android:layout_alignStart="@+id/ButtonTurks"
        android:layout_alignRight="@+id/ButtonTurks"
        android:layout_alignEnd="@+id/ButtonTurks" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turks"
        android:id="@+id/ButtonTurks"
        android:layout_above="@+id/ButtonItaliaans"
        android:layout_alignLeft="@+id/ButtonItaliaans"
        android:layout_alignStart="@+id/ButtonItaliaans"
        android:layout_alignRight="@+id/ButtonItaliaans"
        android:layout_alignEnd="@+id/ButtonItaliaans" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Italiaans"
        android:id="@+id/ButtonItaliaans"
        android:layout_above="@+id/Aanbevolen"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Aanbevolen"
        android:id="@+id/Aanbevolen"
        android:autoText="true"
        android:textColor="#ff000000"
        android:textSize="19dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Door andere gebruikers"
        android:id="@+id/TekstAanbevolen"
        android:textSize="9dp"
        android:textColor="#ff262626"
        android:layout_below="@+id/Aanbevolen"
        android:layout_alignLeft="@+id/Aanbevolen"
        android:layout_alignStart="@+id/Aanbevolen" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FotoAanbevolen2"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/NaamAanbevolen2"
        android:layout_alignRight="@+id/FotoAanbevolen1"
        android:layout_alignEnd="@+id/FotoAanbevolen1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FotoAanbevolen1"
        android:src="@mipmap/ic_launcher"
        android:layout_alignTop="@+id/NaamAanbevolen1"
        android:layout_alignBottom="@+id/TekstAanbevolen1"
        android:layout_toLeftOf="@+id/TekstAanbevolen"
        android:layout_alignLeft="@+id/ButtonItaliaans"
        android:layout_alignStart="@+id/ButtonItaliaans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Titel"
        android:id="@+id/NaamAanbevolen1"
        android:textColor="#ff000000"
        android:layout_above="@+id/TekstAanbevolen1"
        android:layout_alignLeft="@+id/TekstAanbevolen1"
        android:layout_alignStart="@+id/TekstAanbevolen1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Hier komt de informatie in over de snackbars. En andere informatie. opvulling. asdajdaksdjadjkasdjkajsdasd"
        android:id="@+id/TekstAanbevolen1"
        android:layout_above="@+id/FotoAanbevolen2"
        android:layout_toRightOf="@+id/FotoAanbevolen1"
        android:layout_toEndOf="@+id/FotoAanbevolen1"
        android:layout_marginBottom="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Hier komt de informatie in over de snackbars. En andere informatie. opvulling. asdajdaksdjadjkasdjkajsdasd"
        android:id="@+id/TekstAanbevolen2"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/TekstAanbevolen1"
        android:layout_alignStart="@+id/TekstAanbevolen1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Titel"
        android:id="@+id/NaamAanbevolen2"
        android:textColor="#ff000000"
        android:layout_above="@+id/TekstAanbevolen2"
        android:layout_alignLeft="@+id/TekstAanbevolen2"
        android:layout_alignStart="@+id/TekstAanbevolen2" />

</RelativeLayout>
